<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="m1.nayak.m1.ResultsFragment">


    <ListView
        android:padding="20dp"
        android:layout_margin="10dp"
        android:id="@+id/ListView_results"
        android:background="@color/highlighted_text_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/Button_discard"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_selector_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Button_discard"
            android:text="Discard"/>


        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/Button_save"
            android:background="@drawable/button_selector_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/Button_save"
            android:text="Save"/>

    </RelativeLayout>


</RelativeLayout>
